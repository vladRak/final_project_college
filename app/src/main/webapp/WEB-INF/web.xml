<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

<display-name>Exposition Calendar</display-name>

  <servlet-mapping>
    <servlet-name>default</servlet-name>
    <url-pattern>*.png</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>default</servlet-name>
    <url-pattern>*.css</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>default</servlet-name>
    <url-pattern>*.js</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>default</servlet-name>
    <url-pattern>*.scss</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>default</servlet-name>
    <url-pattern>*.jpg</url-pattern>
  </servlet-mapping>

  <listener>
    <listener-class>com.final_project.web.listener.AppServletContextListener</listener-class>
  </listener>

  <listener>
    <listener-class>com.final_project.web.listener.SessionCounterListener</listener-class>
  </listener>

  <error-page>
    <error-code>500</error-code>
    <location>/app?controller=error</location>
  </error-page>

  <error-page>
    <error-code>404</error-code>
    <location>/app?controller=error</location>
  </error-page>

  <error-page>
    <error-code>403</error-code>
    <location>/app?controller=error</location>
  </error-page>

  <error-page>
    <error-code>401</error-code>
    <location>/app?controller=error</location>
  </error-page>

  <servlet>
    <servlet-name>DispatcherServlet</servlet-name>
    <servlet-class>com.final_project.web.servlet.DispatcherServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>DispatcherServlet</servlet-name>
    <url-pattern>/app</url-pattern>
  </servlet-mapping>

  <filter>
    <filter-name>EncodingRequestFilter</filter-name>
    <filter-class>com.final_project.web.filter.EncodingRequestFilter</filter-class>
  </filter>

  <filter-mapping>
    <filter-name>EncodingRequestFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>

  <filter>
    <filter-name>EncodingResponseFilter</filter-name>
    <filter-class>com.final_project.web.filter.EncodingResponseFilter</filter-class>
  </filter>

  <filter-mapping>
    <filter-name>EncodingResponseFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>

  <filter>
    <filter-name>XSSFilter</filter-name>
    <filter-class>com.final_project.web.filter.XSSFilter</filter-class>
  </filter>

  <filter-mapping>
    <filter-name>XSSFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>

  <filter>
    <filter-name>AuthFilter</filter-name>
    <filter-class>com.final_project.web.filter.AuthFilter</filter-class>
  </filter>

  <filter-mapping>
    <filter-name>AuthFilter</filter-name>
    <url-pattern>/app</url-pattern>
  </filter-mapping>
</web-app>
